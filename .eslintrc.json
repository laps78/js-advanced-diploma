{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
      "no-lonely-if": "off",
      "max-len": "off",
      "no-unused-vars": "warn",
      "no-alert": "off",
      "arrow-parens": "warn",
      "class-methods-use-this": "warn",
      "no-restricted-syntax": [
        "error",
        "LabeledStatement",
        "WithStatement"
      ],
      "prefer-destructuring": ["error", {
        "object": true,
        "array": false
      }]
    }
}
